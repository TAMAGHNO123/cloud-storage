generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model File {
  id           Int       @id @default(autoincrement())
  originalName String
  mimeType     String
  fileName     String
  size         Int
  filePath     String
  iv           String
  tags         Tag[]     @relation(references: [id])
  versions     Version[]
}

model Version {
  id           Int       @id @default(autoincrement())
  fileId       Int
  fileName     String
  createdAt    DateTime  @default(now())
  file         File      @relation(fields: [fileId], references: [id])
}
model Tag {
  id     Int    @id @default(autoincrement())
  name   String @unique
  files  File[] @relation(references: [id])
}